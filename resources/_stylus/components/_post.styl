.post
  &-anchor
    text-decoration none
    color inherit

    &:hover
      text-decoration underline

  p
    font-size 1.2em
    line-height 1.8

  .posts &
    margin 30px 0
    border-bottom 1px dashed #ccc

    .post-title
      border-bottom 0

      font-size 2.2em

  &-title
    margin 0 0 .4em

    border-bottom 2px dashed #ccc

    font-size 3em

    a
      text-decoration none
      color #38d

      &:hover
        text-decoration underline

  &-description
    margin 0 0 30px

    font-size 1.3em